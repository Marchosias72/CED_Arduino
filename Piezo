#define piezoPin 8
int melody[]={262, 294, 330, 349, 392, 440, 494, 523};

void setup()
{
   pinMode(piezoPin, OUTPUT);
}
void loop()
{
   for(int i=0; i<8;i++)
   {
      tone(8, melody[i], 200); 
      delay(400); 
      noTone(8);

   }
 
  for(int i=6; i<-1;i++)
   {
      tone(8, melody[i], 200); 
      delay(400); 
      noTone(8);
   }
}
